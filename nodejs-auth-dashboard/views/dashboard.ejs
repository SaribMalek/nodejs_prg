<% var title = 'Dashboard' %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
  <div>Welcome, <strong><i class="bi bi-person-circle"></i> <%= user.name %></strong></div>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <h5 class="card-title"><i class="bi bi-people"></i> Users</h5>
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col"><i class="bi bi-hash"></i></th>
            <th scope="col"><i class="bi bi-person"></i> Name</th>
            <th scope="col"><i class="bi bi-envelope"></i> Email</th>
            <th scope="col"><i class="bi bi-calendar-check"></i> Registered</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(u, idx){ %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><i class="bi bi-person-fill"></i> <%= u.name %></td>
            <td><i class="bi bi-envelope-fill"></i> <%= u.email %></td>
            <td><i class="bi bi-calendar-event"></i> <%= new Date(u.createdAt).toLocaleString() %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
