<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= typeof title !== 'undefined' ? title : 'Auth App' %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container d-flex justify-content-between align-items-center">
    
    <!-- Left side: Brand or Menu -->
    <% if (!user) { %>
      <a class="navbar-brand" href="/"><i class="bi bi-person-circle"></i> AuthApp</a>
    <% } else { %>
      <a class="nav-link text-light" href="/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
    <% } %>

    <!-- Center (optional brand for logged-in user) -->
    <% if (user) { %>
      <span class="navbar-brand mx-auto"><i class="bi bi-app-indicator"></i> AuthApp</span>
    <% } %>

    <!-- Right side -->
    <div class="d-flex">
      <% if (!user) { %>
        <a class="nav-link text-light me-2" href="/login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
        <a class="nav-link text-light" href="/register"><i class="bi bi-pencil-square"></i> Register</a>
      <% } else { %>
        <a class="btn btn-outline-light" href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
      <% } %>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <% if (typeof success_msg === 'string' && success_msg.trim().length > 0) { %>
      <div class="alert alert-success"><i class="bi bi-check-circle"></i> <%= success_msg %></div>
  <% } %>

  <% if (typeof error_msg === 'string' && error_msg.trim().length > 0) { %>
      <div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> <%= error_msg %></div>
  <% } %>

  <%- body %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
