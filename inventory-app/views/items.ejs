<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Items</h3>
  <div>
    <a class="btn btn-sm btn-success me-2" href="/items/add">Add Item</a>
    <a class="btn btn-sm btn-secondary" href="/">Dashboard</a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>ID</th><th>Name</th><th>SKU</th><th>Category</th><th>Price</th><th>Stock</th><th>Supplier</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.sku || '-' %></td>
          <td><%= item.category || '-' %></td>
          <td>$<%= Number(item.price).toFixed(2) %></td>
          <td><%= item.stock %></td>
          <td><%= item.supplier_name || '-' %></td>
          <td>
            <a class="btn btn-sm btn-primary" href="/items/edit/<%= item.id %>">Edit</a>
            <form action="/items/delete/<%= item.id %>" method="POST" class="d-inline" onsubmit="return confirm('Delete item?');">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
