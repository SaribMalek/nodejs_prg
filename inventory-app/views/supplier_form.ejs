<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h3><%= supplier ? 'Edit Supplier' : 'Add Supplier' %></h3>
  <a class="btn btn-sm btn-secondary" href="/suppliers">Back to suppliers</a>
</div>

<form action="<%= supplier ? ('/suppliers/edit/' + supplier.id) : '/suppliers/add' %>" method="POST" class="row g-3">
  <div class="col-md-6">
    <label class="form-label">Name</label>
    <input name="name" value="<%= supplier ? supplier.name : '' %>" class="form-control" required>
  </div>
  <div class="col-md-3">
    <label class="form-label">Phone</label>
    <input name="phone" value="<%= supplier ? supplier.phone : '' %>" class="form-control">
  </div>
  <div class="col-md-3">
    <label class="form-label">Email</label>
    <input name="email" type="email" value="<%= supplier ? supplier.email : '' %>" class="form-control">
  </div>
  <div class="col-12">
    <button class="btn btn-primary"><%= supplier ? 'Update' : 'Create' %></button>
  </div>
</form>

<%- include('partials/footer') %>
